<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.whitea.sastpancake.mapper.PancakeMapper">
    <insert id="save">
        insert into sast_pancake.pancake (title, create_time, ddl)
        values (#{title},#{createTime},#{ddl});
    </insert>
    <update id="updateWithIsDown">
        update sast_pancake.pancake
            set is_done = 1
        where id = #{pancakeId};
    </update>

    <delete id="deleteById">
        delete
        from sast_pancake.pancake
                 where id = #{pancakeId};
    </delete>

    <select id="query" resultType="com.whitea.sastpancake.entity.po.Pancake">
        select *
        from sast_pancake.pancake;
    </select>

    <select id="getByPancakeId" resultType="com.whitea.sastpancake.entity.po.Pancake">
        select *
        from sast_pancake.pancake
        where id = #{pancakeId};
    </select>

</mapper>
